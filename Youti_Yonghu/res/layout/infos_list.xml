<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="#ffffff"
  	android:paddingLeft="@dimen/x5"
  	android:paddingRight="@dimen/x5"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/news_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/x10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:orientation="horizontal" >

            <com.youti.view.CircleImageView1
                android:id="@+id/iv_head"
                android:layout_width="@dimen/x60"
                android:minHeight="@dimen/x60"
                android:minWidth="@dimen/x60"
                android:layout_height="@dimen/x60"
                android:src="@drawable/sq_pic_eg" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_marginLeft="@dimen/x10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tim"
                android:textColor="#333333"
                android:textSize="18sp" />
        </LinearLayout>
        
        <LinearLayout 
            android:gravity="center"
			android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
           
            <ImageView 
                android:layout_marginLeft="@dimen/x20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sp_pl"
                />
            <TextView 
                android:id="@+id/tv_pinglun"
                android:layout_marginLeft="@dimen/x10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="012"
                android:textColor="#ffffff"
                android:textSize="20sp"
                />
            
             <ImageView 
                 android:layout_marginLeft="@dimen/x40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sp_heart_h"
                />
            <TextView 
                android:id="@+id/tv_zan"
                android:layout_marginLeft="@dimen/x10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="20sp"
                android:textColor="#ffffff"
                />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_marginLeft="@dimen/x20"
        android:gravity="center_vertical"
        android:id="@+id/news_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x70"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="#656565" />

   <!--  <TextView
        android:id="@+id/news_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:gravity="right"
        android:text="12341251431234"
        android:textColor="#9f9f9f" /> -->

</LinearLayout>