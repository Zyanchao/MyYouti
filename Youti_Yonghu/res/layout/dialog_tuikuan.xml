<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"   
    android:layout_height="match_parent"
    android:background="@drawable/news_item_bg"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/tv_title"
        android:textSize="16sp"
         android:layout_marginLeft="@dimen/x40"
        android:layout_marginTop="@dimen/x28"
        android:layout_marginBottom="@dimen/x24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请选择退款原因"
        android:textColor="#333333"
        />
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="#cccccc"
	    />
	<LinearLayout 
	    android:id="@+id/ll1"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/x70"
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
	    >
	    <TextView 
	        android:layout_marginLeft="@dimen/x40"
	        android:textColor="#333333"
	        android:layout_weight="1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="1、下错单了"
	        />
	   <ImageView 
	     
	       android:id="@+id/iv1"
	       android:layout_marginRight="@dimen/x40"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:src="@drawable/wdxz_select"
	       />
	</LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="#cccccc"
	    />
	<LinearLayout 
	    android:id="@+id/ll2"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/x70"
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
	    >
	    <TextView 
	        android:id="@+id/tv2"
	        android:layout_marginLeft="@dimen/x40"
	        android:textColor="#333333"
	        android:layout_weight="1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="2、对教练不满意"
	        />
	   <ImageView 
	         android:visibility="gone"
	       android:id="@+id/iv2"
	       android:layout_marginRight="@dimen/x40"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:src="@drawable/wdxz_select"
	       />
	</LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="#cccccc"
	    />
	<LinearLayout 
	    android:id="@+id/ll3"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/x70"
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
	    >
	    <TextView 
	        android:id="@+id/tv3"
	        android:layout_marginLeft="@dimen/x40"
	        android:textColor="#333333"
	        android:layout_weight="1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="3、无法与教练达成一致"
	        />
	   <ImageView 
	        android:id="@+id/iv3"
	        android:visibility="gone"
	       android:layout_marginRight="@dimen/x40"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:src="@drawable/wdxz_select"
	       />
	</LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="#cccccc"
	    />
	<LinearLayout 
	     android:id="@+id/ll4"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/x70"
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
	    >
	    <TextView 
	        android:layout_marginLeft="@dimen/x40"
	        android:textColor="#333333"
	        android:layout_weight="1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="4、其他"
	        />
	   <ImageView 
	        android:id="@+id/iv4"
	       android:visibility="gone"
	       android:layout_marginRight="@dimen/x40"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:src="@drawable/wdxz_select"
	       />
	</LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="#cccccc"
	    />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/x70"
	    android:gravity="center_vertical"
	    >
	    <TextView 
	         android:id="@+id/tv_cancle"
	        android:textColor="#333333"
	        android:gravity="center"
	        android:layout_weight="1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="取消"
	        />
	    <View 
	        android:layout_width="1px"
	        android:layout_height="@dimen/x50"
	        android:background="#bbbbbb"
	        
	        />
	     <TextView 
	         android:id="@+id/tv_sure"
	            android:textColor="#333333"
	          android:gravity="center"
	         android:layout_weight="1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="确定"
	        />
	</LinearLayout>
</LinearLayout>