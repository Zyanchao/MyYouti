<?xml version="1.0" encoding="utf-8"?>
<com.youti.view.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center_vertical"
    android:minHeight="@dimen/x240"
    android:orientation="horizontal" >

    <com.youti.view.FrontLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/x240" >
			<LinearLayout 
			   android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="#ffffff"
			    android:gravity="center_vertical"
			    android:minHeight="@dimen/x240"
			    android:orientation="horizontal" >
			    <com.youti.view.CircleImageView
            android:id="@+id/coach_head"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/x150"
            android:layout_marginLeft="@dimen/x20"
            android:src="@drawable/sq_head" >
        </com.youti.view.CircleImageView>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x240"
            android:layout_marginLeft="@dimen/x28"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/coach_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="@dimen/x38" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="#333333"
                    android:textSize="@dimen/x38" />

                <TextView
                    android:id="@+id/coach_project"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="@dimen/x38" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="教练"
                    android:textColor="#333333"
                    android:textSize="@dimen/x38" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/coach_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/x30"
                    android:text=""
                    android:textColor="#666666" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元/小时"
                    android:textSize="@dimen/x30"
                    android:textColor="#666666" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textSize="@dimen/x30"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/coach_totaltime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/x30"
                    android:textColor="#666666" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小时"
                    android:textSize="@dimen/x30"
                    android:textColor="#666666" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余 "
                    android:textSize="@dimen/x30"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/coach_remnant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/x30"
                    android:textColor="#ff0000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 小时"
                    android:textSize="@dimen/x30"
                    android:textColor="#666666" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="折扣： "
                    android:textSize="@dimen/x30"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/coach_zkou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textSize="@dimen/x30"
                    android:textColor="#666666" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="折"
                    android:textSize="@dimen/x30"
                    android:textColor="#666666" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/coach_zongjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总价："
                    android:textSize="@dimen/x30"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/coach_totalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/x30"
                    android:textColor="#666666" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textSize="@dimen/x30"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/coach_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x50"
                    android:text=""
                    android:textSize="@dimen/x30"
                    android:textColor="#666666" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/wannaorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/wyyk_selector" />

        <Button
            android:id="@+id/ljzf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/ljzf_selector"
            android:visibility="gone" />
			</LinearLayout>
        
    </com.youti.view.FrontLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x240"
        android:orientation="horizontal" >

        <Button
            android:visibility="gone"
            android:id="@+id/bt_cancel"
            android:layout_width="@dimen/x240"
            android:layout_height="fill_parent"
            android:background="#888888"
            android:gravity="center"
            android:text="取消"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/bt_delete"
            android:layout_width="@dimen/x240"
            android:layout_height="fill_parent"
            android:background="#ff0000"
            android:gravity="center"
            android:text="删除"
            android:textColor="@android:color/white" />
    </LinearLayout>

</com.youti.view.SwipeLayout>