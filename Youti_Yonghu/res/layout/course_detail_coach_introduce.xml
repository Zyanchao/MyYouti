<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:youti="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/x10" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:paddingBottom="@dimen/x50"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x20"
            android:paddingBottom="@dimen/x70"
            android:paddingRight="@dimen/x20" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/x34"
                android:orientation="horizontal" >

                
                <LinearLayout 
                     android:layout_width="match_parent"
                android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="该课程暂时没有教练信息，如果您对该课程教练有所了解，可以点击 完善资料 来填写教练信息，教练信息通过审核后您可以获得50元奖励"
                    android:textColor="@color/text_color_list_item"
                    android:textSize="@dimen/x30" />
                 </LinearLayout>
            </LinearLayout>

            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x34"
                android:layout_gravity="center_horizontal"
                 >
            <Button 
                android:id="@+id/bt_wanshan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="完善教练资料"
                    android:background="@drawable/kcxq_button_long"
                />
            
            </LinearLayout>
            
            
            
        </LinearLayout>
    </ScrollView>


</RelativeLayout>