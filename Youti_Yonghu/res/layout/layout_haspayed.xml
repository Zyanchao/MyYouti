<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:youti="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <com.youti.view.TitleBar
        android:id="@+id/index_titlebar1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        youti:titleText="@string/left_menu_kc" >
    </com.youti.view.TitleBar>

    <RelativeLayout
        android:id="@+id/yuyueren"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:layout_below="@id/index_titlebar1"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:text="@string/yuyueren"
            android:textColor="#333333" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:text="宋天博"
            android:textColor="#333333" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/wdxx_fengexian" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/jiaolian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:layout_below="@id/yuyueren"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_jiaolian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:text="@string/jiaolian"
            android:textColor="#333333" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_jiaolian"
            android:text="刘海然"
            android:textColor="#333333" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/wdxx_fengexian" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/xiangmu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:layout_below="@id/jiaolian"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_xiangmu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:text="@string/xiangmu"
            android:textColor="#333333" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_xiangmu"
            android:text="高尔夫"
            android:textColor="#333333" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/wdxx_fengexian" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/danjia"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:layout_below="@id/xiangmu"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_danjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:text="@string/kechengdanjia"
            android:textColor="#333333" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_danjia"
            android:text="200元/小时"
            android:textColor="#333333" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/wdxx_fengexian" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/shichang"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:layout_below="@id/danjia"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_shichang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:text="@string/kechengshichang"
            android:textColor="#333333" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_shichang"
            android:text="2小时"
            android:textColor="#333333" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/wdxx_fengexian" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/totalprice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:layout_below="@id/shichang"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_totalprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:text="@string/totalprice"
            android:textColor="#333333" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_totalprice"
            android:text="400元"
            android:textColor="#333333" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/wdxx_fengexian" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/state"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:layout_below="@id/totalprice"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:text="@string/state"
            android:textColor="#333333" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_state"
            android:text="@string/notpayed"
            android:textColor="#333333" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/wdjl_msfk" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/wdxx_fengexian" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pinglun"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:layout_below="@id/state"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_pinglun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:text="我的评论"
            android:textColor="#333333" />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x20"
                android:background="@drawable/more_arrow" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/wdxx_fengexian" />
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/x36"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:background="@drawable/selector_cancelorder" />

</RelativeLayout>