<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x190"
    android:minHeight="@dimen/x190"
    android:background="#ffffff"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <com.youti.view.CircleImageView
        android:id="@+id/iv_header"
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/x150"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/x20"
        android:background="@drawable/wdxx_mishu" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/x20"
        android:layout_toRightOf="@id/iv_header"
        android:text="李东"
        android:textColor="#333333"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/iv_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/x20"
        android:layout_toRightOf="@id/iv_header"
        android:background="@drawable/wdxx_online" />

    <TextView
        android:id="@+id/tv_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginTop="@dimen/x5"
        android:layout_toRightOf="@id/iv_dot"
        android:text="[在线]" />

    <TextView
        android:id="@+id/tv_xiangmu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_dot"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/x20"
        android:layout_toRightOf="@id/iv_header"
        android:text="项目： " />

    <TextView
        android:id="@+id/tv_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_dot"
        android:layout_marginLeft="@dimen/x5"
        android:layout_marginTop="@dimen/x20"
        android:layout_toRightOf="@id/tv_xiangmu"
        android:text="网球"
        android:textColor="#33666666" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/x20"
        android:text="2015-05-12"
        android:textColor="#333333"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_mycoach_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_dot"
        android:layout_marginLeft="@dimen/x36"
        android:layout_marginTop="@dimen/x20"
        android:layout_toRightOf="@id/tv_project"
        android:text="服务中"
        android:textColor="#6049a1" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/gotopay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/x16"
        android:layout_marginRight="@dimen/x20"
        android:background="@drawable/wdjl_zhifu"
        android:clickable="true" />

    <LinearLayout
        android:id="@+id/ll"
         android:layout_below="@id/iv_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_marginTop="@dimen/x20"
         android:layout_marginRight="@dimen/x20"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sp_heart_h"
            android:layout_marginRight="@dimen/x15"
            android:clickable="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         	android:clickable="true"
            android:text="89"
            android:visibility="visible" />
    </LinearLayout>

    <ImageView
        android:layout_marginTop="@dimen/x20"
        android:layout_below="@id/ll"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc" />

</RelativeLayout>