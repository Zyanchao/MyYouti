     >
    <ImageView 
        android:id="@+id/iv_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/welcome"
        android:scaleType="centerCrop"
        />
   <!--  <View 
        android:layout_marginTop="@dimen/x300"
