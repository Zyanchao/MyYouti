<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:youti="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE"
    android:orientation="vertical" >

    <com.youti.view.TitleBar
        android:id="@+id/index_titlebar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        youti:btnsearchVisible="false"
        youti:btnShareVisible="false"
        youti:titleText="@string/ksyd" >
    </com.youti.view.TitleBar>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/x30"
        android:paddingRight="@dimen/x30"
        android:paddingLeft="@dimen/x30" >

        <ImageView
            android:id="@+id/im_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ksyd_phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/im_phone"
            android:text="电话预定"
            android:textColor="@color/text_color_333333"
            android:textSize="16sp" />

    </RelativeLayout>

    
      <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/x5"
        android:paddingRight="@dimen/x30"
        android:paddingLeft="@dimen/x30" >
        
          <TextView 
              
              android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/ksyd_400"
              android:textColor="@color/text_color_list_item"
              />
        </RelativeLayout>
        
       <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/x30"
        android:layout_gravity="center"
         >
        
          <Button 
              android:id="@+id/bt_phone400"
               android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_ksyd_btn"
              />
        </RelativeLayout>
        
       
       
       
       
       <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/x30"
        android:paddingRight="@dimen/x30"
        android:paddingLeft="@dimen/x30" >

        <ImageView
            android:id="@+id/im_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ksyd_online" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/im_online"
            android:text="在线咨询"
            android:textColor="@color/text_color_333333"
            android:textSize="16sp" />

    </RelativeLayout>

    
      <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/x5"
        android:paddingRight="@dimen/x30"
        android:paddingLeft="@dimen/x30" >
        
          <TextView 
              
              android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/ksyd_400"
              android:textColor="@color/text_color_list_item"
              />
        </RelativeLayout>
        
       <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/x30"
        android:layout_gravity="center"
         >
        
          <Button 
              android:id="@+id/bt_online"
               android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_zxzx_btn"
              />
        </RelativeLayout>
</LinearLayout>