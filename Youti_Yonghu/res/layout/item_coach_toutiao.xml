<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x20"
        android:paddingBottom="@dimen/x10"
        android:paddingTop="@dimen/x10" >

        <TextView
            android:id="@+id/tv_top_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingRight="@dimen/x20"
            android:paddingTop="@dimen/x20"
            android:text="1"
            android:textColor="@color/text_color_333333"
            android:textSize="@dimen/x32"
             />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:layout_toRightOf="@+id/img_headportrait"
            android:text="Asbasett"
            android:textColor="@color/text_color_333333"
            android:textSize="@dimen/x32"
             />

        <com.youti.view.CircleImageView
            android:id="@+id/img_headportrait"
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/x90"
            android:layout_toRightOf="@+id/tv_top_num"
            android:src="@drawable/widget_dface" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_toRightOf="@+id/img_headportrait"
            android:paddingBottom="@dimen/x15"
            android:paddingLeft="@dimen/x15"
            android:paddingTop="@dimen/x15" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目:"
                android:textColor="@color/text_color_list_item"
                android:textSize="@dimen/x30"
                 />

            <TextView
                android:id="@+id/tv_val"
                android:layout_width="@dimen/x130"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x10"
                android:text="高尔夫"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/x30"
                 />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x25"
                android:background="@drawable/toutiao_location" />

            <TextView
                android:id="@+id/tv_address_city"
                android:layout_width="@dimen/x130"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x15"
                android:text="北京"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/x30"
                 />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x35"
                android:background="@drawable/toutiao_heart_h" />

            <TextView
                android:id="@+id/tv_zan_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x15"
                android:text="155"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/x30"
                 />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_top_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_headportrait"
            android:layout_toLeftOf="@+id/linearLayout1"
            android:background="@drawable/toutiao_top1" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/wdjl_fengexian" />

        
    </RelativeLayout>

</LinearLayout>