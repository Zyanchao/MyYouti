<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:youti="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/x10" >

    <ScrollView
        android:id="@+id/scrollView_course_detail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:paddingBottom="@dimen/x50"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/ll_course_detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/x70"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/x20"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程价格 ："
                    android:textColor="@color/text_color_list_item"
                    android:textSize="@dimen/x30" />

                <TextView
                    android:id="@+id/course_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 100"
                    android:textColor="@color/item_text_price"
                    android:textSize="@dimen/x30" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#F0F0F0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/x20"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="适合人群 ："
                    android:textColor="@color/text_color_list_item"
                    android:textSize="@dimen/x30" />

                <TextView
                    android:id="@+id/course_agree_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="15-25岁"
                    android:lineSpacingExtra="@dimen/x10"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/main_primary"
                    android:textSize="@dimen/x30" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#F0F0F0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/x20"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学员人数 ："
                    android:textColor="@color/text_color_list_item"
                    android:textSize="@dimen/x30" />

                <TextView
                    android:id="@+id/course_people_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 8"
                    android:textColor="@color/text_color_dark_grey"
                    android:textSize="@dimen/x30" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#F0F0F0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/x20"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程时间 ："
                    android:textColor="@color/text_color_list_item"
                    android:textSize="@dimen/x30" />

                <TextView
                    android:id="@+id/course_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="网球     "
                    android:textColor="@color/main_primary"
                    android:textSize="@dimen/x30" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#F0F0F0" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginTop="@dimen/x20"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上课地点 ："
                    android:textColor="@color/text_color_list_item"
                    android:textSize="@dimen/x30" />

                <TextView
                    android:id="@+id/course_tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="none"
                    android:lineSpacingExtra="@dimen/x10"
                    android:lineSpacingMultiplier="1.2"
                    android:maxLines="10"
                    android:textColor="@color/main_primary"
                    android:textSize="@dimen/x30"
                    android:scrollHorizontally="false"
                    android:text="北京市昌平区沙阳路13号"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#F0F0F0" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginTop="@dimen/x20"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="行车路线 ："
                    android:textColor="@color/text_color_list_item"
                    android:textSize="@dimen/x30" />

                <TextView
                    android:id="@+id/course_car_way"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="none"
                    android:lineSpacingExtra="@dimen/x10"
                    android:lineSpacingMultiplier="1.2"
                    android:maxLines="2"
                    android:scrollHorizontally="false"
                    android:text="北京市昌平区沙阳路13号"
                    android:textColor="@color/main_primary"
                    android:textSize="@dimen/x30" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#F0F0F0" />

            <!--
                  <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="12.0"
                android:layout_marginTop="@dimen/x15"
                android:orientation="horizontal" >
            -->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginTop="@dimen/x20"
                android:animateLayoutChanges="true" >

                <TextView
                    android:id="@+id/tv_plan_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="教学计划 ："
                    android:textColor="@color/text_color_list_item"
                    android:textSize="@dimen/x30" />

                <TextView
                    android:id="@+id/course_plan"
                    android:layout_width="@dimen/x490"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_plan_tip"
                    android:ellipsize="none"
                    android:lineSpacingExtra="@dimen/x10"
                    android:lineSpacingMultiplier="1.2"
                    android:maxLines="10"
                    android:scrollHorizontally="false"
                    android:text="北京市昌平区沙阳路13号gdffsd"
                    android:textColor="@color/main_primary"
                    android:textSize="@dimen/x30" />

                <ImageView
                    android:id="@+id/contentShowControl2"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/spxq_arrow"
                    android:clickable="true"
                    android:duplicateParentState="true"
                    android:paddingRight="@dimen/x15" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#F0F0F0" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginTop="@dimen/x20"
                android:animateLayoutChanges="true" >

                <TextView
                    android:id="@+id/course_tip_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注意事项 ："
                    android:textColor="@color/text_color_list_item"
                    android:textSize="@dimen/x30" />

                <TextView
                    android:id="@+id/course_tv_tips"
                    android:layout_width="@dimen/x500"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/course_tip_tips"
                    android:ellipsize="none"
                    android:lineSpacingExtra="@dimen/x10"
                    android:lineSpacingMultiplier="1.2"
                    android:maxLines="10"
                    android:scrollHorizontally="false"
                    android:text="北京市昌平区沙阳路13号"
                    android:textColor="@color/main_primary"
                    android:textSize="@dimen/x30" />

                <ImageView
                    android:id="@+id/contentShowControl1"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/spxq_arrow"
                    android:clickable="true"
                    android:duplicateParentState="true" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#F0F0F0" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="2dp" >

                <LinearLayout
                    android:id="@+id/pinglun_zan_users"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <com.youti.view.MGridView
                        android:id="@+id/gv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x100"
                        android:layout_marginLeft="@dimen/x10"
                        android:numColumns="6" >
                    </com.youti.view.MGridView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/ll_zan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/zan_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/sp_heart_h"
                            android:clickable="true" />

                        <TextView
                            android:id="@+id/tv_zan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_8"
                            android:gravity="center"
                            android:paddingLeft="@dimen/Padding_4"
                            android:text="100"
                            android:textColor="@color/text_color_dark_grey"
                            android:textSize="@dimen/TextSize_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_pinglun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="blocksDescendants"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/pinglun_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/pinglun"
                            android:background="@drawable/sp_pl"
                            android:clickable="true" />

                        <TextView
                            android:id="@+id/tv_pinglun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_8"
                            android:gravity="center"
                            android:paddingLeft="@dimen/Padding_4"
                            android:text="12"
                            android:textColor="@color/text_color_dark_grey"
                            android:textSize="@dimen/TextSize_14" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x14" >

                <Button
                    android:id="@+id/bt_course_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/kcxq_button_long"
                    android:text="查看该俱乐部其他课程" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x30"
                android:layout_marginRight="@dimen/x10"
                android:animateLayoutChanges="true" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他课程"
                    android:textColor="@color/text_color_list_item"
                    android:textSize="@dimen/x30" />

                <!--
                     <ImageView
                    android:id="@+id/contentShowControl1"
                    android:layout_width="@dimen/x38"
                    android:layout_height="@dimen/x38"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/spxq_arrow"
                    android:clickable="true"
                    android:duplicateParentState="true" />
                -->


                <!--  -->
            </RelativeLayout>

            <ListView
                android:id="@+id/lv_ohter_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#f0f0f0"
                android:dividerHeight="@dimen/x1" >
            </ListView>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x30"
                android:layout_marginRight="@dimen/x20"
                android:animateLayoutChanges="true" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评论信息:"
                    android:textColor="@color/text_color_list_item"
                    android:textSize="@dimen/x32" />
            </RelativeLayout>

            <ListView
                android:id="@+id/lv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#f0f0f0"
                android:dividerHeight="@dimen/x1"
                android:listSelector="@android:color/transparent" >
            </ListView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>