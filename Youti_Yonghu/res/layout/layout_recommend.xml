<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
    xmlns:youti="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >

    <com.youti.view.TitleBar
        android:id="@+id/index_titlebar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        youti:titleText="@string/left_menu_kc" >
    </com.youti.view.TitleBar>

    <TextView 
        android:layout_marginTop="@dimen/x30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv"
        android:textColor="#333333"
        android:layout_marginLeft="@dimen/x20"
        android:textSize="16sp"
        android:text="分享APP给好友"
        />
    <LinearLayout 
        android:layout_marginTop="@dimen/x36"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout 
            android:layout_marginLeft="@dimen/x40"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
           <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_weixin"
            android:background="@drawable/weixin_selector"
            />
           <TextView
               android:layout_marginTop="@dimen/x20"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="微信好友"
               android:textColor="#333333"
               /> 
            
        </LinearLayout>
        
         <LinearLayout 
              android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
           <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_friendcircle"
            android:background="@drawable/friendcircle_selector"
            />
           <TextView
               android:layout_marginTop="@dimen/x20"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="  朋友圈"
               android:textColor="#333333"
               /> 
            
        </LinearLayout>
         <LinearLayout 
              android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
           <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_qq"
            android:background="@drawable/qq_selector"
            />
           <TextView
               android:layout_marginTop="@dimen/x20"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="    QQ"
               android:textColor="#333333"
               /> 
            
        </LinearLayout>
          <LinearLayout 
               android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
           <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_weibo"
            android:background="@drawable/xinlang_selector"
            />
           <TextView
               android:layout_marginTop="@dimen/x20"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="新浪微博"
               android:textColor="#333333"
               /> 
            
        </LinearLayout>
    </LinearLayout>
    <View 
        android:layout_marginTop="@dimen/x34"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eeeeee"
        />
    
    <LinearLayout 
        android:layout_marginTop="@dimen/x76"
        android:layout_marginLeft="@dimen/x95"
        android:layout_marginRight="@dimen/x95"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x600"
        android:orientation="vertical"
        android:background="#dddddd"
        >
        
        <ImageView 
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/erweima"
            />
        <TextView
             android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="12sp"
            android:text="扫描二维码、快速下载优体教练APP"
            />
    </LinearLayout>
</LinearLayout>