<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:youti="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/x30" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#e1e1e1"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
         >

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/x20"
            android:lineSpacingExtra="@dimen/x10"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/chat_tips"
            android:textColor="@color/text_color_333333" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/tv_tips"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/x20"
            android:paddingTop="@dimen/x10" >
            

            <Button
                android:id="@+id/bt_phone400"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginLeft="@dimen/x20"
                android:onClick="phone400"
                android:background="@drawable/zixun_phone" />

            <Button
                android:id="@+id/bt_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginLeft="@dimen/x20"
                android:onClick="book"
                android:background="@drawable/zixun_zxzx" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>