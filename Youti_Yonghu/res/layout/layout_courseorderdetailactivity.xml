<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:youti="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <com.youti.view.TitleBar
        android:id="@+id/index_titlebar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        youti:titleText="@string/left_menu_kc" >
    </com.youti.view.TitleBar>

    <LinearLayout
        android:id="@+id/ll_cc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x220"
        android:background="#ffffff"
        android:layout_marginBottom="@dimen/x5"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/course_img"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/x160"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x16"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x16"
            android:background="@drawable/default_class"
            android:layout_weight="2"
             />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/course_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x52"
                android:text=""
                android:textColor="#333333" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x34" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="#6049a1" />

                <TextView
                    android:id="@+id/course_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#6049a1" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/more_arrow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pingjia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x12"
        android:layout_marginBottom="@dimen/x10"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_pingjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x30"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/x30"
            android:layout_weight="1"
            android:text="我的评价"
            android:textColor="#333333" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/more_arrow" />
    </LinearLayout>

    <LinearLayout
        
     	android:visibility="gone"
         android:id="@+id/ll_youtiquan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wdkc_ytq"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x40"
         >

        <LinearLayout
           
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x26"
                android:text="优体券"
                android:textSize="16sp"
                android:textColor="#333333" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x3"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开课时间："
                    android:textColor="#444444"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/course_begin_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#444444"
                    android:textSize="@dimen/x30" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x3"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="券码01："
                    android:textColor="#444444"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/youti_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#444444"
                    android:textSize="@dimen/x30" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/hasused"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x40"
            android:text="已使用"
            android:textColor="#666666" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/x5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingBottom="@dimen/x26"
        android:paddingLeft="@dimen/x40"
        android:paddingTop="@dimen/x26" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单详情"
            android:textSize="16sp"
            android:textColor="#333333" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x3"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号："
                android:textColor="#444444"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#444444"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x3"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/buy_data_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买手机号："
                android:textColor="#444444"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mobilephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#444444"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x3"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/data_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下单时间："
                android:textColor="#444444"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#444444"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_count"
            android:layout_marginTop="@dimen/x3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量："
                android:textColor="#444444"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#444444"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_marginTop="@dimen/x3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总价："
                android:textColor="#444444"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#444444"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="#444444"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/ll_bottombutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x16"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:paddingTop="@dimen/x16" >

        <Button
            android:visibility="gone"
            android:id="@+id/qxdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x20"
            android:layout_weight="1"
            android:background="@drawable/qxdd_selector"
             />

        <Button
            android:visibility="gone"
            android:id="@+id/ljfk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_weight="1"
            android:background="@drawable/ljfk_selector" />

        <Button
            android:id="@+id/scdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_weight="1"
            android:text="删除订单"
            android:textSize="16sp"
            android:textColor="#6049a1"
            android:background="@drawable/scdd_selector"
            android:visibility="gone" />

        <Button
            android:id="@+id/sqtk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_weight="1"
            android:background="@drawable/sqtk_selector"
            android:visibility="gone" />

        <Button
            android:id="@+id/qxyy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消预约"
            android:textSize="16sp"
             android:textColor="#6049a1"
            android:visibility="gone"
            android:background="@drawable/qxyy_selector"
             />
    </LinearLayout>

</LinearLayout>