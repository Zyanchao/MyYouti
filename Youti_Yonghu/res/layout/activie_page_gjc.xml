<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:youti="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE" >

    <com.youti.view.TitleBar
        android:id="@+id/index_titlebar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        youti:btnShareVisible="false"
        youti:btnsearchVisible="false"
        youti:titleText="团队工间操" >
    </com.youti.view.TitleBar>

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/index_titlebar"
        android:orientation="vertical"
        android:paddingBottom="@dimen/x30"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30"
        android:paddingTop="@dimen/x60" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/x20"
            android:text="优体教练为公司提供，免费的工间操指导服务，想每天都有专业的教练带领大家一起跳操，赶快在线报名吧！"
            android:textColor="@color/text_color_333333"
            android:textSize="@dimen/x40" />

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/x10"
                android:text="企业要求："
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/x40" />

            
            
            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/x10"
                android:text="1, 北京地区五环内企业"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/x40" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="2"
                android:paddingTop="@dimen/x10"
                android:text="2, 20人以上企业 "
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/x40" />
            
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_top"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:background="#F0F0F0" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_top"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/x30"
                android:text="企业名称："
                android:textColor="#cccccc"
                android:textSize="@dimen/x40" />

            <EditText
                android:id="@+id/et_eq_name"
                android:layout_width="@dimen/x430"
                android:layout_height="@dimen/x100"
                android:background="@drawable/login_border"
                android:hint="请填写企业名称"
                android:imeOptions="actionNext" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:background="#F0F0F0" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_top"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/x30"
                android:text="您的姓名："
                android:textColor="#cccccc"
                android:textSize="@dimen/x40" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="@dimen/x430"
                android:layout_height="@dimen/x100"
                android:background="@drawable/login_border"
                android:hint="请填姓名"
                android:imeOptions="actionNext" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:background="#F0F0F0" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_top"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/x30"
                android:text="您的手机："
                android:textColor="#cccccc"
                android:textSize="@dimen/x40" />

            <EditText
                android:id="@+id/et_tel"
                android:layout_width="@dimen/x430"
                android:layout_height="@dimen/x100"
                android:background="@drawable/login_border"
                android:phoneNumber="true"
                android:hint="请填写电话"
                android:imeOptions="actionNext" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:background="#F0F0F0" />
         <Button
        android:id="@+id/bt_book"
        style="@style/Button.Yellow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x20"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x180"
        android:gravity="center"
        android:text="报名"
        android:textColor="@color/text_color_select" />
    </LinearLayout>

   

</RelativeLayout>