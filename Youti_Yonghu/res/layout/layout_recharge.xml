<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:youti="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <com.youti.view.TitleBar
        android:id="@+id/index_titlebar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        youti:titleText="@string/left_menu_kc" >
    </com.youti.view.TitleBar>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入你的充值卡号："
        android:textSize="16sp"
        android:textColor="#333333"
        />
    <EditText 
        android:layout_marginLeft="@dimen/x20"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_code"
        android:focusable="true"
        android:singleLine="true"
        />
	<View 
	    android:layout_marginTop="5dp"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
		android:background="#333333"
	    />
	<LinearLayout 
	    android:layout_marginTop="@dimen/x10"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	   android:paddingLeft="@dimen/x10"
	   android:paddingRight="@dimen/x10"
	    >
	    <Button 
	        android:layout_marginRight="@dimen/x5"
	       android:layout_weight="1"
	    android:background="@drawable/kcxq_button_buy"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/but"
	    android:text="确定"
	    android:layout_gravity="bottom"
	    />
	     <Button 
	          android:layout_marginLeft="@dimen/x5"
	         android:layout_weight="1"  
	    android:background="@drawable/kcxq_button_buy"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/delete"
	    android:text="删除"
	    android:layout_gravity="bottom"
	    />
	</LinearLayout>
	
</LinearLayout>