<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:youti="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical" >


        <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/new_qx"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <com.youti.view.CircleImageView
                        android:id="@+id/img_one"
                        android:layout_width="@dimen/x130"
                        android:layout_height="@dimen/x130"
                        android:src="@drawable/sq_head" />

                     <ImageView
                        android:id="@+id/img_top1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="-9dp"
                        android:src="@drawable/jl_top1" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/new_tennis"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <com.youti.view.CircleImageView
                        android:id="@+id/img_two"
                        android:layout_width="@dimen/x130"
                        android:layout_height="@dimen/x130"
                        android:src="@drawable/user_head" />

                     <ImageView
                        android:id="@+id/img_top2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="-9dp"
                        android:src="@drawable/jl_top2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/new_golf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <com.youti.view.CircleImageView
                        android:id="@+id/img_three"
                        android:layout_width="@dimen/x130"
                        android:layout_height="@dimen/x130"
                        android:src="@drawable/sq_head" />

                     <ImageView
                        android:id="@+id/img_top3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="-9dp"
                        android:src="@drawable/jl_top3" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/new_gd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <com.youti.view.CircleImageView
                        android:id="@+id/img_four"
                        android:layout_width="@dimen/x130"
                        android:layout_height="@dimen/x130"
                        android:src="@drawable/user_head" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/new_tou"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/img_toutiao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jl_toutiao" />
                </LinearLayout>
            </LinearLayout>

    </RelativeLayout>

 <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x80"
        android:background="#ffffff"
         >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/jl_near"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x24"
            android:textColor="@color/text_color_333333"
            android:textSize="@dimen/x30" />
        
        </RelativeLayout>
        
    </LinearLayout>
