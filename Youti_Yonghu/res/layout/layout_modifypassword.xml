<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:youti="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <com.youti.view.TitleBar
        android:id="@+id/index_titlebar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        youti:titleText="@string/left_menu_kc" >
    </com.youti.view.TitleBar>
    
    <LinearLayout 
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x20"
        android:id="@+id/ll_old"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        >
         <TextView 
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="#333333"
        	android:text="请输入旧密码："
        />

    	<EditText
    	    android:paddingLeft="@dimen/x15"
    	    android:id="@+id/oldpassword"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:background="@drawable/bg_edittext_nor"
    	    android:inputType="textPassword" />

    </LinearLayout>
    <LinearLayout 
         android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x20"
         android:layout_marginTop="@dimen/x15"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        >
         <TextView 
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="#333333"
        	android:text="请输入新密码："
        />

    	<EditText
    	     android:paddingLeft="@dimen/x15"
    	    android:id="@+id/newpassword"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:background="@drawable/bg_edittext_nor"
    	    android:inputType="textPassword" />

    </LinearLayout>
    <LinearLayout 
         android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x20"
         android:layout_marginTop="@dimen/x15"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        >
         <TextView 
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="#333333"
        	android:text="请确认新密码："
        />

    	<EditText
    	     android:paddingLeft="@dimen/x15"
    	    android:id="@+id/confirmpassword"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:background="@drawable/bg_edittext_nor"
    	    android:inputType="textPassword" />

    </LinearLayout>
   
	<LinearLayout 
	    android:layout_marginTop="@dimen/x20"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
         <Button 
             android:layout_marginLeft="@dimen/x20"
             android:layout_marginRight="@dimen/x20"
             android:background="@drawable/kcxq_button_buy"
             android:id="@+id/submit"
             android:layout_weight="1"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="#333333"
        	android:text="确认"
        />
    	 <Button 
    	     android:layout_marginRight="@dimen/x20"
    	    android:background="@drawable/kcxq_button_buy"
    	    android:id="@+id/cancle"
    	    android:layout_weight="1"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="#333333"
        	android:text="取消"
        />
    </LinearLayout>
    <Button
        android:id="@+id/but_forget"
        android:background="@null" 
        android:layout_marginTop="@dimen/x20"
        android:layout_marginLeft="@dimen/x40"
        android:text="忘记密码 ?"
        android:textColor="#1A7ACE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</LinearLayout>